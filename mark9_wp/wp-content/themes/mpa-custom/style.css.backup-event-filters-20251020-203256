/* Modern Liquid Design System for Malaysia Proptech Association */

/* CSS Variables - Modern Dark/Light Theme */
:root {
    /* Dark Mode Colors */
    --bg-primary-dark: #0a0a0a;
    --bg-secondary-dark: #1a1a1a;
    --bg-tertiary-dark: #2a2a2a;
    --text-primary-dark: #ffffff;
    --text-secondary-dark: rgba(255, 255, 255, 0.85);
    --text-muted-dark: rgba(255, 255, 255, 0.6);
    --glass-bg-dark: rgba(255, 255, 255, 0.08);
    --glass-border-dark: rgba(255, 255, 255, 0.15);
    --accent-blue: #007AFF;
    --accent-purple: #5856D6;
    --accent-green: #34C759;
    --accent-orange: #FF9500;
    --accent-red: #FF3B30;
    --accent-pink: #FF2D92;
    --primary-color: var(--accent-blue);
    
    /* Light Mode Colors */
    --bg-primary-light: #ffffff;
    --bg-secondary-light: #f8f9fa;
    --bg-tertiary-light: #f1f3f4;
    --text-primary-light: #1d1d1f;
    --text-secondary-light: rgba(29, 29, 31, 0.8);
    --text-muted-light: rgba(29, 29, 31, 0.6);
    --glass-bg-light: rgba(255, 255, 255, 0.9);
    --glass-border-light: rgba(0, 0, 0, 0.1);
    
    /* Default to dark mode */
    --bg-primary: var(--bg-primary-dark);
    --bg-secondary: var(--bg-secondary-dark);
    --bg-tertiary: var(--bg-tertiary-dark);
    --text-primary: var(--text-primary-dark);
    --text-secondary: var(--text-secondary-dark);
    --text-muted: var(--text-muted-dark);
    --glass-bg: var(--glass-bg-dark);
    --glass-border: var(--glass-border-dark);
    
    /* Typography */
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    
    /* Spacing */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-xxl: 3rem;
    
    /* Border Radius */
    --border-radius-sm: 0.25rem;
    --border-radius-md: 0.375rem;
    --border-radius-lg: 0.5rem;
    --border-radius-xl: 0.75rem;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.08);
    --shadow-md: 0 2px 8px rgba(0, 0, 0, 0.12);
    --shadow-lg: 0 4px 16px rgba(0, 0, 0, 0.16);
    --shadow-dark: 0 4px 20px rgba(0, 0, 0, 0.3);
    
    /* Transitions */
    --transition-fast: 0.15s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;
}

