/* Full-Page Ripple Effect */
.full-page-ripple {
    position: fixed;
    top: 0;
    left: 0;
    border-radius: 50%;
    background: rgba(0, 122, 255, 0.38);
    transform: scale(0);
    animation: full-page-ripple-animation 2.5s ease-out;
    pointer-events: none;
    z-index: 9999;
    box-shadow: 0 0 0 0 rgba(0, 122, 255, 0.31);
    mix-blend-mode: soft-light;
}

/* Theme-specific full-page ripple colors */
body.light-mode .full-page-ripple {
    background: rgba(52, 58, 64, 0.25);
    box-shadow: 0 0 0 0 rgba(52, 58, 64, 0.20);
    mix-blend-mode: normal;
    animation: full-page-ripple-animation-light 2.7s ease-out;
}

@keyframes full-page-ripple-animation {
    0% {
        transform: scale(0);
        
        box-shadow: 0 0 0 0 rgba(0, 122, 255, 0.38);
    }
    20% {
        transform: scale(0.3);
        
        box-shadow: 0 0 0 45px rgba(0, 122, 255, 0.31);
    }
    40% {
        transform: scale(0.58);
        
        box-shadow: 0 0 0 85px rgba(0, 122, 255, 0.24);
    }
    60% {
        transform: scale(0.8);
        
        box-shadow: 0 0 0 125px rgba(0, 122, 255, 0.17);
    }
    80% {
        transform: scale(0.94);
        
        box-shadow: 0 0 0 145px rgba(0, 122, 255, 0.12);
    }
    100% {
        transform: scale(1);
        
        box-shadow: 0 0 0 160px rgba(0, 122, 255, 0.06);
    }
}

@keyframes full-page-ripple-animation-light {
    0% {
        transform: scale(0);
        
        box-shadow: 0 0 0 0 rgba(52, 58, 64, 0.25);
    }
    20% {
        transform: scale(0.35);
        
        box-shadow: 0 0 0 50px rgba(52, 58, 64, 0.20);
    }
    40% {
        transform: scale(0.65);
        
        box-shadow: 0 0 0 95px rgba(52, 58, 64, 0.15);
    }
    60% {
        transform: scale(0.85);
        
        box-shadow: 0 0 0 135px rgba(52, 58, 64, 0.10);
    }
    80% {
        transform: scale(0.97);
        
        box-shadow: 0 0 0 155px rgba(52, 58, 64, 0.08);
    }
    100% {
        transform: scale(1);
        
        box-shadow: 0 0 0 175px rgba(52, 58, 64, 0.05);
    }
}

